import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
        Scanner sc = new Scanner(System.in);
        int n1 = sc.nextInt();
        int n2 = sc.nextInt();
        int n3 = sc.nextInt();
        float c = ((n1*n2)-(n1*n3))-100;
        System.out.printf("Number of copies sold:%d\nCost of each copy:%d\nCost spent by agency on each newspaper:%d\nThe profit obtained is Rs.%.2f\n",n1,n2,n3,c);
    }
}
